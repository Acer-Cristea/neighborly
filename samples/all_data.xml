<NeighborlyData>
    <Characters>
        <CharacterArchetype name="Civilian">
            <GameCharacter
                    name="#first_name# #last_name#"
                    lifecycle.lifespan_mean="85"
                    lifecycle.lifespan_std="15"
            />
            <Routine type="default" />
        </CharacterArchetype>
        <CharacterArchetype name="Hitman" extends="Civilian">
            <Hitman coins="5" />
        </CharacterArchetype>
    </Characters>
    <Activities>
        <!-- Call the Activity factory and pass the attributes -->
        <Activity name="gambling" traits="wealth, excitement, adventure, lust" />
        <Activity name="shopping" traits="material, excitement, leisure-time" />
        <Activity name="recreation" traits="health, leisure-time" />
    </Activities>
</NeighborlyData>
